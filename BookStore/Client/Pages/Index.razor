@page "/"
@inject IBookServices BS

<PageTitle>Books</PageTitle>

<TelerikGrid Data="@BS.Books"
			 Pageable="true"
			 Sortable="true"
			 FilterMode="@GridFilterMode.FilterRow"
			 EditMode="@GridEditMode.Popup"
>
	<GridColumns>
		<GridColumn Field="Title" Title="Book Title" />
		<GridColumn Field="Author" Title="Author" />
		<GridColumn Field="Genre.Name" Title="Genre" />
		<GridColumn Field="Price" DisplayFormat="{0:C2}" />
		<GridColumn Field="PublishedYear" DisplayFormat="{0:yyyy}" />
	</GridColumns>
</TelerikGrid>

@code {
	protected override async Task OnInitializedAsync()
	{
		await BS.GetBooks();
	}

}